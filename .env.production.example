# Production Environment Configuration
# Copy this to .env for production deployment

# Telegram Bot Configuration
BOT_TOKEN=your_production_telegram_bot_token_here

# Environment Configuration
NODE_ENV=production

# Database Configuration (Supabase)
PRODUCTION_DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PRODUCTION-PROJECT-REF].supabase.co:5432/postgres
# Alternative: Use your production database URL
# PRODUCTION_DATABASE_URL=postgresql://username:password@production-host:port/database

# Admin Configuration
ADMIN_SECRET=your_production_admin_secret_password

# Optional: Channel IDs for broadcasts
# Replace with actual production channel IDs or leave commented out
# VOLUNTEER_CHANNEL_ID=-1001234567890
# VOLUNTEER_TOPIC_ID=123

# Optional: Admin Channel ID for reports
# Replace with actual production admin channel IDs or leave commented out
# ADMIN_CHANNEL_ID=-1001234567890
# ADMIN_TOPIC_ID=456

# For production webhook deployment
WEBHOOK_URL=your_production_app_URL/api/webhook
